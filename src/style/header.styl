header
	background: #dcdcdc;
	.header
		max-height: 230px;
		height: 100%;
		display: flex;
		justify-content: space-between;
		align-items: center;
		.header__company
			display flex
			flex-direction row
			.logo
				width: 100px;
				height: 100px
				background: #767676
			.info
				display: flex;
				flex-direction column
				justify-content center
				padding: 0 10px
				.name
					font-size: 190%;
					font-weight: 700;
					line-height: 80%;
				.slogan
					font-size: 90%;
					line-height: 250%;

		.header__contacts
			display flex
			flex-direction column
			align-items flex-end
			.tel
				font-family: 'Open Sans Condensed';
				font-size: 270%;
				font-weight 300
			.feedback
				font-weight: 700;
				font-size: 155%;
				border-bottom: 2px dashed #797979;

	.header__nav
		background: #767676;
		min-height: 80px;
		align-items: center;
		.menu
			list-style: none;
			display: flex;
			justify-content: space-around;
			align-items: center;
			li
				color: #FFF;
				font-size 170%
				display flex
				justify-content: center;
				align-items: center;
				text-align: center;
				&.devider {
					width 2px;
					height: 30px;
					background #FFF
					margin: 0 -35px;
				}
				a:hover{
					text-decoration underline
					cursor: pointer
				}