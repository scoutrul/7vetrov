header
	background: #dcdcdc;
	color #767676
	.header
		min-height: 230px;

		display: flex;
		justify-content: space-between;
		align-items: center;
		.header__company

			display flex
			flex-direction row
			.logo
				width: 100px;
				height: 100px
				background: #767676
			.info
				display: flex;
				flex-direction column
				justify-content center
				padding: 0 10px
				.name
					font-size 170%
					font-weight bold
				.slogan
					font-size: 90%;
					line-height: 250%;

		.header__contacts
			display flex
			flex-direction column
			align-items flex-end
			.tel
				font-size 200%
				font-weight lighter
			.feedback
				font-weight: bold;
				font-size: 135%;
				margin-top: 20px;
				border-bottom: 2px dashed #797979;

	.header__nav
		background: #767676;
		min-height: 80px;
		align-items: center;
		.menu
			list-style: none;
			display: flex;
			justify-content: space-around;
			li
				color: #FFF;
				font-size 170%
				display flex
				justify-content: center;
				align-items: center;
				text-align: center;
				&.devider {
					width 2px;
					background #FFF
					margin: 0 -35px;
				}
				a:hover{
					text-decoration underline
					cursor: pointer
				}