footer
	display: flex;
	background: #777;
	color: #FFF;
	width: 100%;
	min-height: 220px;
	padding: 45px 0;
	font-size 90%
	.footer
		display: flex;
		justify-content: space-between;
		.copyright
			margin-right 20px
			line-height 150%
		.footer__menu
			padding: 0;
			margin: 0 auto 0 137px;
			list-style: none;
			li
				line-height: 20px;
				margin: 0 0 6px 0;
				text-decoration underline
				&:hover
					text-decoration none
					cursor pointer

		.digital
			margin: 0 30px 0 0
			line-height 150%
			display: flex;
			flex-direction: row;
			max-width: 210px;
			.digital__logo
				min-width: 60px;
				height: 60px;
				text-align: center;
				line-height: 50px;
				font-size: 380%;
				font-style: italic;
				font-weight: 700;
			.digital__link
				flex: 0 1 auto;
				a
					text-decoration underline