footer
	display: flex;
	background: #777;
	color: #FFF;
	width: 100%;
	min-height: 220px;
	padding: 50px 0;
	font-size 90%
	.footer
		display: flex;
		justify-content: space-between;
		.copyright
			margin-right 10px
			line-height 150%
		.footer__menu
			padding: 0;
			margin: 0 auto 0 140px;
			list-style: none;
			li
				line-height: 20px;
				margin: 0 0 5px 0;
				a
					text-decoration underline
		.digital
			margin: 0 40px 0 0
			line-height 150%
			display: flex;
			flex-direction: row;
			max-width: 200px;
			.digital__logo
				width: 60px;
				height: 60px;
			.digital__link
				flex: 0 1 auto;
				a
					text-decoration underline